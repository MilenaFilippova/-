//2 массива в 1
#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;
int main(void)
{   
	int const m=5,n=6;
	int A[m];
	int B[n] ;
	int C[m+n];
	int min=-10,max=10,k=0;

	for(int i=0; i<m; i++)
    { 
        A[i]=max+rand()%(max-min+1) ;
        C[k]= A[i];
        cout<< C[k]<< '\t';
	    k=k+1;
    }
	for(int j=0; j<n; j++)
    { 
		B[j]=max+rand()%(max-min+1) ;
        C[k]= B[j];
        cout<< C[k]<< '\t';
		k=k+1;
    }
return 0;
}

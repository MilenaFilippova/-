//поменять местами элементы 
#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main(void)
{ 
	int const n=5;
	int p=0;
	int Z[2*n];
	int min=-20, max=20;
	cout<<"Massive Z[i] : ";
	for(int i=0; i<n*2; i++)
    {
		Z[i]=max+rand()%(max-min+1) ;
		cout<<Z[i]<<'\t';
	}
	
	cout<<endl;
	for(int i=1; i<n*2; i=i+2)
    {
		p= Z[i];
		Z[i]= Z[i-1]; //меняем соседние элементы местами
		Z[i-1]=p;
          cout<< Z[i-1] << '\t'<< Z[i]<<'\t';
   }
	system("pause");
	return 0;
}
